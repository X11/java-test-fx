<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<fx:root fx:controller="nl.tkeur.DefaultController" type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0">
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #D81E05;">
        <children>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="SOMETIMES">
                <children>
                    <ImageView fitHeight="30.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../../images/icon_128.png"/>
                        <HBox.margin>
                            <Insets left="10.0" right="10.0"/>
                        </HBox.margin>
                    </ImageView>
                </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="SOMETIMES">
                <children>
                    <Label text="Welcome !" fx:id="welcomeLabel" textFill="#fcfcfc" HBox.hgrow="SOMETIMES"/>
                    <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleLogoutButtonAction"
                            style="-fx-background-color: inherit; -fx-border-style: solid; -fx-border-color: white;"
                            text="Logout" textFill="WHITE" HBox.hgrow="SOMETIMES">
                        <HBox.margin>
                            <Insets left="20.0" right="20.0"/>
                        </HBox.margin>
                    </Button>
                </children>
            </HBox>
        </children>
    </HBox>
</fx:root>

